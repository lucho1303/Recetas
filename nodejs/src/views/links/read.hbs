<div class="container p-4">
    <h1 class="my-4 text-uppercase">{{receta.title}}</h1>
    <div class="row">
        <div class="imgReceta col-md-8">
            <img class="img-fluid" src={{receta.image}} alt="" >
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Descripcion</h3>
            <p>{{receta.description}}</p>
            <h3 class="my-3">Ingredientes</h3>
            <textarea name="ingredientes" rows="10" cols="1" class="form-control text-left" placeholder="Ingredientes" readonly>
                {{receta.ingredientes}}
            </textarea>
        </div>
    </div>
     <h4 class="my-4">Autor: {{receta.user_id}}</h4>
</div>